  <!-- 
	    ID                  VARCHAR2(40)   고객id
		NO         NOT NULL NUMBER         고유키
		PNO                 NUMBER         제품번호
		TITLE               VARCHAR2(1000) 
		POSTER              VARCHAR2(400)  
		PRICE               NUMBER         
		ORDERCOUNT          NUMBER   기본값 1
		CNO                 NUMBER   카테고리 번호(1:운동용품, 2:다이어트식품)?
		ORDDATE             DATE 
		STATE				NUMBER   결제 상태(기본값 0) 
 -->
  
  <!-- 장바구니 리스트 -->
  <select id="basketListData" resultType="User_basketVO" parameterType="int">
    SELECT id,no,pno,title,poster,price,ordercount 
    FROM user_basket u,dietfood_list d,goods_list g
    WHERE u.pno=d.uno OR u.pno=g.no
    	AND
  </select>
  
  <!-- 장바구니에 넣기 -->
  <insert id="basketInsert" parameterType="User_basketVO">
    INSERT INTO user_basket VALUES(
		#{id},
		#{no},
		#{pno},
		#{title},
		#{poster},
		#{price},
		1,
		#{cno},
		SYSDATE,
		0
	)
  </insert>

